                <div class="card-body mx-auto text-center p-1 mw-100">
                    <p class="card-title text-center">{{{ this.name }}}</p>
                    <p class="card-title text-center">{{{ this.price }}} grn</p>
                    {{!-- <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> --}}
                    <form action="/" method="POST">
                        <input type="hidden" name="id" value={{{ this._id }}}>
                        <button type="submit" class="btn btn-outline-success addBtn">Купити</button>
                        {{!-- <a href="#" class="btn btn-outline-success addBtn" >Купити</a> --}}
                    </form>
                </div>
            </div>
