                <input type="hidden" name="shop" value='all'>
                <button type="submit" class="btn btn-info btn-lg btn-block alert" > All </button>
            </form>
        {{#each shopList}}
            {{!-- <a class="btn btn-info btn-lg btn-block" href="#" role="button">{{{ this.name }}}</a> --}}
